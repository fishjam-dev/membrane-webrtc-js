{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/",
    "strict": true,
    "target": "ESNext",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
