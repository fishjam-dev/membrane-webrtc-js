{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/",
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": true,
    "target": "es2018",
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"]
  },
  "include": ["./src/**/*",
    "./e2e/**/*"
  ],
  "exclude": [
    "e2e/app/**/*"
  ]
}
