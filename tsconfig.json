{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "strict": true,
    "target": "es2018",
    "lib": ["DOM", "ES2019"]
  },
  "include": ["src/**/*"]
}
