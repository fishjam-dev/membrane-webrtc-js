{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist/",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "lib": ["DOM", "DOM.Iterable", "ES2019"]
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["tests/app/**/*"]
}
